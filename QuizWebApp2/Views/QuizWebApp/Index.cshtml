@model IEnumerable<quizLibrary.Quiz>

@{
    ViewBag.Title = "Index";
}

<h2>All Quizzes</h2>

<p>
    @Html.ActionLink("Create New Quiz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Publish Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @item.PublishDate.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QuizId }) |
                @Html.ActionLink("Details", "Details", new { id = item.QuizId }) |
                @Html.ActionLink("Questions", "../Questions/Index", new { quizId = item.QuizId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QuizId })
            </td>
        </tr>
    }

</table>
